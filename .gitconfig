[alias]
  st = status
  br = branch
  ci = commit -v
  co = checkout
  di = diff
  dis = diff --staged
  dlog = log --graph --decorate --pretty=oneline --abbrev-commit --all
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph
  logm = log --stat --patch
  logp = log --pretty=oneline --abbrev-commit
  rebase = rebase --verbose
[core]
  editor = vim
[branch]
	sort = -committerdate

# git-delta config (https://github.com/dandavison/delta)
[delta]
  navigate = true    # use n and N to move between diff sections
  line-numbers = true
[core]
  pager = delta
[credential "https://gitlab.ent-dx.com"]
	helper = 
	helper = !/usr/bin/glab auth git-credential
