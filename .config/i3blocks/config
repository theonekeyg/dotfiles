# https://github.com/vivien/i3blocks/blob/master/docs/README.adoc
# https://i3wm.org/docs/i3bar-protocol.html
# https://github.com/vivien/i3blocks-contrib

[memory]
command=$HOME/.config/i3blocks/memory
label=MEM:
interval=3

[cpu-usage]
command=$HOME/.config/i3blocks/cpu-load
label=CPU:
interval=2

[gpu-usage]
label=GPU:
command=$HOME/.config/i3blocks/gpu-load
interval=5

[volume]
label=SND VOL:
command=$HOME/.config/i3blocks/volume
interval=once
signal=10

# [weather]
# command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
# interval=3600
# # color=#A4C2F4

[battery]
command=$HOME/.config/i3blocks/battery
label=BAT
interval=30

[date]
command=date "+%a %d.%m.%Y %H:%M:%S"
interval=5
